<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout
        android:id="@+id/fdmaincontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blur">

        <ImageView
            android:id="@+id/Cara"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/pockemon1"/>

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pikachu"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/primary_text"
            android:textSize="40dp"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/espada"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/espada"/>

            <TextView
                android:id="@+id/ataque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="40"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/primary_text"
                android:shape="rectangle"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/escudo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/escudo"/>

            <TextView
                android:id="@+id/velocidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="32"
                android:layout_marginLeft="5dp"
                android:textColor="@color/primary_text"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/rayo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/rayo"/>

            <TextView
                android:id="@+id/fuerza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="32"
                android:layout_marginLeft="5dp"
                android:textColor="@color/primary_text"
                android:textSize="30dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

